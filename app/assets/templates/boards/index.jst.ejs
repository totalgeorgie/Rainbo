<div class="dashboard-header">
  <div class="container col-md-offset-2">
    <h4>DASHBOARD</h4>
  </div>
</div>
<script>
$(function() {
  $('.board-new').on('click', function(e) {
    var board = new ProFlo.Models.Board();
    $('#boards').append('<li class="board-detail"><a><p>Mock Project</p></a></li>');
  });
});
</script>
<div class="row">
  <div class="container col-md-4 col-md-offset-2">
    <div class="boards-header row">
      <h2 class="project-header">My Projects</h2>
      <a href="#"
         class="btn btn-primary board-new"
         data-toggle="modal"
         data-target="#boardNew">
        Add Project
      </a>
    </div>
    <ul id="boards">
      <% boards.each(function(board) { %>
        <a href='#/boards/<%= board.get('id') %>'>
          <li class="board-detail">
            <p><%= board.escape('title') %></p>
            <div class="board-controls">
              <a>Edit</a>
            </div>
          </li>
        </a>
      <% }); %>
    </ul>
  </div>

  <div class="container col-md-4">
    <h2>Project Activity</h2>
    <ul id="activity">
      <li>
        <p>Activity Item</p>
      </li>
    </ul>
  </div>
</div>